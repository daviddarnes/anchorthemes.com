---
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /anchorshowcase/category/{{ tag | replace(" ", "-") | lower }}/
layout: "layouts/default"
---
{% from "partials/header.njk" import header %}
{% from "partials/footer.njk" import footer %}
{% from "partials/ad.njk" import ad %}

{% block header %}
  {{ header(site.anchorshowcase, page, tag) }}
{% endblock %}

<main class="main">
  <div class="container">
    <div class="row">
      {% from "partials/card-site.njk" import card %}
      {% set tagList = collections[tag] %}
      {% for item in tagList | reverse %}
        {{ card(item, site.anchorshowcase, loop.index) }}
      {% endfor %}
      {{ ad(site.anchorshowcase) }}
    </div>
  </div>
</main>

{% block footer %}
  {{ footer(site.anchorshowcase, page) }}
{% endblock %}
