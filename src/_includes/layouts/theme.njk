{% include 'partials/header.njk' %}
<main class="main theme">
  <article class="article container">
    <div class="row">
      <div class="span-5">
        <h2 itemprop="description">{{ description }}</h2>
        <div itemprop="about">{{ content | safe }}</div>

        {% if author %}
          {% set authorLine %}
            {% if author.url %}
              <a itemprop="creator" target="_blank" rel="noopener" href="{{ author.url }}">{{ author.name }}</a>
            {% else %}
              {{ author.name }}
            {% endif %}
          {% endset %}
          <h3>Created By {{ authorLine | safe }}</h3>
        {% endif %}

        <h3>Filed under <a itemprop="genre" href="/category/{{ tags[1] | lower | replace(" ", "-") }}">{{ tags[1] }}</a></h3>
        <p>
          {% if links.download %}
            <a itemprop="url" class="button" href="{{ links.download }}">Download <svg class="icon icon-install"><use xlink:href="#icon-install"></use></svg></a>
          {% endif %}
          {% if links.repo %}
            <a itemprop="url" class="button" href="{{ links.repo }}">View repo <svg class="icon icon-github"><use xlink:href="#icon-github"></use></svg></a>
          {% endif %}
          {% if links.demo %}
            <a itemprop="sameAs" href="{{ links.demo }}">View demo <svg class="icon icon-browser"><use xlink:href="#icon-browser"></use></svg></a>
          {% endif %}

          {% set twitterText %}Check out {{ title }} theme{% if author.name %} by {{ author.name }}{% endif %}{% endset %}

          <a class="button button--tweet" href="http://twitter.com/intent/tweet?text={{ twitterText | replace(" ", "%20") }}&amp;url={{ site.url + page.url }}&amp;via={{ site.twitter }}" class="entypo-twitter" target="_blank" rel="noopener">Tweet <svg class="icon icon-twitter"><use xlink:href="#icon-twitter"></use></svg></a>
        </p>
      </div>
      <div class="span-7 screens">
        <div class="slider">
          {% if images %}
            {% for image in images %}
              <img itemprop="image" src="{{ image }}" alt="{{ title }} image one" width="1080" height="840" />
            {% endfor %}
          {% else %}
            <img src="{{ site.url }}/assets/images/placeholder-large.gif" alt="Temporary image" width="1080" height="840" />
          {% endif %}
        </div>
      </div>
    </div>
  </article>
  <section class="container related">
    <div class="row">
      <h2 class="span-12">Related Themes</h2>
      {% from "partials/loopblock.njk" import loopblock %}
      {% for theme in collections.themes %}
        {% if tags[1] in theme.data.tags[1] %}
          {{ loopblock(theme, loop.index) }}
        {% endif %}
      {% endfor %}
      {% include 'partials/ad-pact.njk' %}
    </div>
  </section><!-- .container -->
</main>
{% include 'partials/footer.njk' %}
