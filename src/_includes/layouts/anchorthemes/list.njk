{% extends "layouts/default.njk" %}

{% from "partials/head.njk" import head %}
{% from "partials/header.njk" import header %}
{% from "partials/footer.njk" import footer %}
{% from "partials/ad.njk" import ad %}
{% from "partials/feature-theme.njk" import feature %}

{% set feature %}
  {{ feature(collections.featuredTheme[0]) }}
{% endset %}

{% block head %}
  {{ head(site.anchorthemes, page, title, description) }}
{% endblock %}

{% block header %}
  {{ header(site.anchorthemes, page, "", feature) }}
{% endblock %}

{% block main %}
  <main class="main">
    <div class="container">
      <div class="row">
        {% from "partials/card-theme.njk" import card %}
        {% for item in collections.themes | reverse %}
          {{ card(item, site.anchorthemes, loop.index) }}
        {% endfor %}
        {{ ad(site.anchorthemes) }}
      </div>
    </div>
  </main>
{% endblock %}

{% block footer %}
  {{ footer(site.anchorthemes, page) }}
{% endblock %}
