{% extends "layouts/default.njk" %}

{% from "partials/header.njk" import header %}
{% from "partials/footer.njk" import footer %}

{% block header %}
  {{ header(site.anchorthemes, page, "") }}
{% endblock %}

{% block main %}
  <main class="main">
    <div class="container">
      <div class="row">
        {% from "partials/card-theme.njk" import card %}
        {% for item in collections.themes | reverse %}
          {{ card(item, loop.index) }}
        {% endfor %}
        {% include 'partials/ad-pact.njk' %}
      </div>
    </div>
  </main>
{% endblock %}

{% block footer %}
  {{ footer(site.anchorthemes, page) }}
{% endblock %}
