{% set url = "https://www.pactcoffee.com/sign-up?voucher=COOLBEANS" %}
{% set title = "Like Coffee? Try Pact for £1" %}

<article class="article ad span-3" itemscope itemtype="http://schema.org/Organization">
    <figure class="figure">
        <a href="{{ url }}" title="{{ title }}">
            <img itemprop="logo" src="{{ site.url }}/assets/images/pactcoffee.png" alt="{{ title }}" width="440" height="260">
        </a>
        <span class="buttons">
            <a href="{{ url }}" class="button icon entypo-forward" target="_blank" rel="noopener" title="{{ title }}"></a>
        </span>
    </figure>
    <div class="hgroup">
        <h2><a href="{{ url }}" title="{{ title }}" itemprop="name">Like Coffee? Try Pact</a></h2>
        <h3>Get your first bag <a href="{{ url }}" title="{{ title }}">for £1</a></h3>
        <small>Advertisement</small>
    </div>
</article>
